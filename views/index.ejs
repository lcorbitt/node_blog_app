<%- include('partials/header.ejs') %>

<%  blogs.forEach((blog)=> { %>
    <div class="ui text container">
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>">
        <span><%= blog.created_at.toDateString() %></span><br>
        <p><%= blog.body.substring(0, 100) %>...</p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>
<% }) %>
<%- include('partials/footer.ejs') %>