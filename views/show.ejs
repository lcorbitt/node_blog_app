<%- include('partials/header.ejs') %>
<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached segment" style="margin-bottom: 1em;">
        <div class="item">
            <img src="<%= blog.image %>" alt="Blog image" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created_at.toDateString() %></span>
                <p><%= blog.body %></p>
            </div>
        </div>
    </div>
    <a href="/blogs/<%= blog.id %>/edit" class="ui blue basic button">Edit</a>
</div>
<%- include('partials/footer.ejs') %>